{% extends'BoostrapBase.html.jinja' %}
{% block header_insert %}
    <title>Control Page</title>
    <style>
        body {
            background-color: powderblue;
        }

        h1 {
            color: blue;
        }

        p {
            color: red;
        }

        table, th, td {
            border: 1px solid black;
        }
    </style>
{% endblock %}
{% block body_insert %}

<h1>Santa Control Page</h1>

{% include "NavigationBar.html.jinja" %}

<table style="background-color:deeppink">
    <caption>Controls</caption>
    <tr>
        <td>
            <h1>{{ localhost }}</h1>
        </td>
        <td>
            <form action="/shutdown">
                <input type="submit" value="SHUTDOWN">
            </form>
        </td>

    </tr>
</table>

{% set table_subs = focus_config_list %}
{% set table_cap = "Configuration Data for  " + focus.name() %}
{% include "table_config.html.jinja" %}

{% include "page_footer.html.jinja" %}

{% endblock %}