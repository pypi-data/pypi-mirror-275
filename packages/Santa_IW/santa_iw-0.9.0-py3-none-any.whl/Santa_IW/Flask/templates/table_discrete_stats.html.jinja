{# define table_cap and table_subs before including #}
{% if table_subs %}
    <br/>

    <caption class="caption">{{ table_cap }}</caption>
    <table style="width:1200px" class="table table-striped table-bordered">
        <thead class="table-dark">
        <tr style="background-color:#0000c0;color:white;">
            <th style="width:20%">Name</th>
            <th style="width:70%">Statistics</th>
        </tr>
        </thead>
        {% set fmt="{val:.8g}" %}
        {% for stat in table_subs %}
            {% set rowcol = 'white' %}
            <tr style="background-color:{{ rowcol }}">
                <td>{{ stat.name() }}<br/>
                    Total count {{ stat.count() }}
                </td>
                <td>
                    {% autoescape false %}
                        <table class="table table-striped table-bordered">
                            <tr style="background-color:#0000c0;color:white;">
                                <th style="width:40%">Value</th>
                                <th style="width:10%">Count</th>
                                <th style="width:20%">Percentage</th>
                                <th style="width:30%">Time Last Seen</th>
                            <tr/>
                            {% for tup in stat.most_common(5) %}
                                <tr>
                                <td>
                                    {{ tup[0] }}
                                </td>
                                <td>
                                    {{ tup[1] }}
                                </td>
                                <td>
                                    {% set scale= 100.0/stat.count() %}
                                    {% set percent= tup[1]*scale %}
                                    {{ webgui.format_8g(val=percent) }} %
                                </td>
                                <td>
                                    {# webgui.escape(str(tup[2]))  #}
                                    {{ tup[2] }}
                                </td>
                            {% endfor %}
                            </tr>
                        </table>

                    {% endautoescape %}
                </td>
            </tr>
        {% endfor %}
    </table>
    <br/>
{% endif %}